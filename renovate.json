{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "argocd": {
    "fileMatch": [
      "apps/.+\\.yaml$",
      "core/.+\\.yaml$",
      "github-action-runner/.+\\.yaml$",
      "cronjobs/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": ["argo-cd"],
      "groupName": "ArgoCD",
      "automerge": false
    },
    {
      "matchPackagePatterns": ["^traefik", "^cert-manager", "^external-secrets"],
      "groupName": "Infrastructure Charts",
      "automerge": false
    },
    {
      "matchPackagePatterns": ["^kube-prometheus", "^prometheus", "^grafana"],
      "groupName": "Monitoring Stack",
      "automerge": false
    },
    {
      "matchPackageNames": ["longhorn"],
      "groupName": "Longhorn",
      "automerge": false
    }
  ]
}
